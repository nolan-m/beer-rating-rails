<%= render("layouts/errors", :object => @region) %>
<%= form_for(@region, :html => { :class => "form-horizontal, col-md-4"}) do |f| %>
  <div class="form-group" focus>
    <%= f.label :name %>
    <%= f.text_field :name, :autofocus => true %>
  </div>
  <div class="hidden">
    <%= f.label :slug %>
    <%= f.text_field :slug %>
  </div>
  <div class="form-group">
  	<%= f.submit(:class => "btn btn-primary") %>
	</div>
<% end %>
