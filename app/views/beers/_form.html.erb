<%= render("layouts/errors", :object => @beer) %>
<%= form_for(@beer, :html => { :class => "form-horizontal col-md-4" }) do |f| %>
  <div class="form-group">
    <%= f.label :name %>
    <%= f.text_field :name, :autofocus => true %>
  </div>
  <div class="form-group">
    <%= f.label :price %>
    <%= f.text_field :price %>
  </div>
  <div class="form-group">
    <%= f.label :abv, "ABV" %>
    <%= f.text_field :abv %>
  </div>
  <div class="form-group" id="description">
    <%= f.label :description %>
    <%= f.text_area :description %>
  </div>
  <div class="form-group">
    <%= f.label :type %>
    <%= f.collection_select :type_id, @types, :id, :name %>
  </div>
  <div class="form-group">
    <%= f.label :brewery %>
    <%= f.collection_select :brewery_id, @breweries, :id, :name %>
  </div>
  <div class ="form-group">
    <%= f.label :p_url, "Picture link" %>
    <%= f.text_area :p_url %>
  </div>
  <div class="hidden">
    <%= f.label :slug %>
    <%= f.text_field :slug %>
  </div>
  <div class="form-group">
    <%= f.submit(:class => "btn btn-primary") %>
  </div>
<% end %>

