<%= render("layouts/errors", :object => @brewery) %>
<div class="col-md-4" id="new-brewery">
<%= form_for(@brewery, :html => { :class => "form-horizontal col-md-4" }) do |f| %>
  <div class="form-group">
    <%= f.label :name %>
    <%= f.text_field :name, :autofocus => true %>
  </div>
  <div class="form-group">
    <%= f.label :region %>
    <%= f.collection_select :region_id, @regions, :id, :name %>
  </div>
  <div class="hidden">
    <%= f.label :slug %>
    <%= f.text_field :slug %>
  </div>
  <%= f.submit(:class => "btn btn-primary") %>
<% end %>
</div>
